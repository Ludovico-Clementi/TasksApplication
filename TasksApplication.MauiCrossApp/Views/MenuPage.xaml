<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TasksApplication.MauiCrossApp.Views.MenuPage"
             Title="Menu">

    <Grid Padding="20">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="16">

            <Label x:Name="greetingDisplay"
                   Text="Welcome"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Button Text="Task Manager"
                    Command="{Binding NavigateToTodoListCommand}"
                    WidthRequest="150"/>

            <Button Text="Exit"
                    Command="{Binding ExitCommand}"
                    WidthRequest="150"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
