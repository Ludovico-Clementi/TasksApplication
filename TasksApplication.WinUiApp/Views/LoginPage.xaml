<Page
    x:Class="TasksApplication.WinUIApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="MainGrid" Padding="20" Background="Transparent">
        <StackPanel Orientation="Vertical" Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBox Header="Nome utente" PlaceholderText="Inserisci nome"
                     Text="{Binding NomeUtente, Mode=TwoWay}" Width="250"/>

            <TextBox Header="Password" PlaceholderText="Inserisci password"
                     Text="{Binding PasswordUtente, Mode=TwoWay}" InputScope="Password" Width="250"/>

            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                <Button Content="Register" Command="{Binding RegisterCommand}" Width="100"/>
                <Button Content="Login" Command="{Binding LoginCommand}" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
